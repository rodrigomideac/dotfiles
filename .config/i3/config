# Floating terminal scratchpad settings
exec_always --no-startup-id terminator -r scraterm
for_window [window_role="scraterm"] floating enable;
for_window [window_role="scraterm"] move scratchpad; [window_role="scraterm"] scratchpad show; move position 80px 50px; move scratchpad
bindsym $mod+F1 [window_role="scraterm"] scratchpad show, resize set 1200 650

# Gaps
# Disable window titlebars (required for gaps)
for_window [class=".*"] border pixel 0

set $default_gaps_inner 5
set $default_gaps_outer 5
gaps inner $default_gaps_inner
gaps outer $default_gaps_outer

